#!name=微博国际版去广告
#!desc=删除微博国际版启动广告，时间线广告
#!system=ios

[Rule]
DOMAIN,bootpreload.uve.weibo.com,REJECT
DOMAIN,adimg.uve.weibo.com,REJECT

[Script]
weibo_intl = type=http-response,pattern=^https?:\/\/api\.weibo\.cn\/2\/((ad\/weibointl)|(statuses\/(friends_timeline|(friends\/timeline)))),requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/Joee-D/surge/main/script/weibo_intl.js,script-update-interval=0

[MITM]
hostname = %APPEND% api.weibo.cn
