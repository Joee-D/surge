#!name=微博去广告
#!desc=删除微博开屏广告，信息流广告
#!system=ios

[Rule]
DOMAIN-SUFFIX, uve.weibo.com, REJECT

[Script]
weibo-json = type=http-response,pattern=^https:\/\/api\.weibo\.cn\/\d\/(statuses|search)\/container_timeline,requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/Joee-D/surge/main/script/weibo.js,script-update-interval=0


[MITM]
hostname = %APPEND% api.weibo.cn
